<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joaohenrique.entregas">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".fornecedores.activities.ListaTodos"
            android:label="@string/todos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joaohenrique.entregas.fornecedores.activities.Navegacao" />
        </activity>
        <activity
            android:name=".fornecedores.activities.CriarFornecedor"
            android:label="@string/novo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joaohenrique.entregas.fornecedores.activities.Navegacao" />
        </activity>
        <activity
            android:name=".fornecedores.activities.Navegacao"
            android:label="@string/title_activity_navegacao"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name="com.joaohenrique.entregas.splashscreen.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>